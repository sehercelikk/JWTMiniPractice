@using JwtProject.Dto.Concrete.UserDtos
@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover text-center">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/User/GetUserRole/@item.Id" class="btn btn-outline-warning mx-2">Roller</a>
                <a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-outline-info mx-2">Güncelle</a>
                <a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger mx-2">Sil</a>
            </td>
        </tr>
    }
</table>

