@using JwtProject.Dto.Concrete.UserDtos
@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - Örnek Sayfa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        /* Sayfayı ortalamak ve arka plan rengi eklemek için özel stil */
        body {
            background-color: #f8f9fa; /* Açık gri arka plan */
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .card {
            max-width: 400px; /* Kartın maksimum genişliği, kayıt sayfasından biraz daha dar */
            width: 100%;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Hafif gölge */
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card p-4">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Hesabınıza Giriş Yapın</h2>

                        <form action="#" method="post">

                            <div class="mb-3">
                                <input type="text" class="form-control" asp-for="Email" placeholder="E-posta adresinizi girin" required>
                            </div>

                            <div class="mb-3">
                                <input type="password" class="form-control" asp-for="PasswordHash" placeholder="Şifrenizi girin" required>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Beni Hatırla
                                    </label>
                                </div>
                                <div>
                                    <a href="#" class="text-decoration-none">Şifremi Unuttum?</a>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Giriş Yap</button>
                            </div>

                            <div class="text-center mt-3">
                                Bir hesabın yok mu? <a href="/Register/Index">Kayıt Ol</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>